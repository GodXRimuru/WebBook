rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Chapters Collection
    // Anyone can read chapter data and view counts
    // Only authenticated users can increment view counts
    match /chapters/{chapterId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Comments Collection
    // Anyone can read comments
    // Only authenticated users can create comments
    // Comments can only be created with the authenticated user's email
    // Comments cannot be updated or deleted (immutable)
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null 
                    && request.resource.data.authorEmail == request.auth.token.email
                    && request.resource.data.keys().hasAll(['bookId', 'chapterId', 'text', 'timestamp']);
      allow update, delete: if false;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Chapters Collection
    // Anyone can read chapter data (views, likes, dislikes)
    // Only authenticated users can update chapter data
    match /chapters/{chapterId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Comments Collection
    // Anyone can read comments
    // Only authenticated users can create comments
    // Comments must have all required fields and correct author email
    // Comments are immutable (cannot be updated or deleted)
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated() 
                    && request.resource.data.authorEmail == request.auth.token.email
                    && request.resource.data.keys().hasAll(['seriesId', 'bookId', 'chapterId', 'text', 'timestamp'])
                    && request.resource.data.text is string
                    && request.resource.data.text.size() > 0
                    && request.resource.data.text.size() <= 1000;
      allow update, delete: if false;
    }
    
    // Pinned Comments Collection
    // Anyone can read pinned comment lists
    // Only authenticated users can manage pinned comments (basic permission - expand with admin roles)
    match /pinnedComments/{chapterKey} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // User Reactions Collection (Like/Dislike)
    // Users can read all reactions
    // Users can only write their own reactions
    // Document ID format: {userId}_{chapterId}
    match /userReactions/{reactionId} {
      allow read: if true;
      allow write: if isAuthenticated() 
                   && reactionId.matches(request.auth.uid + '_.*');
    }
    
    // User Views Collection
    // Tracks which users have viewed which chapters
    // Users can read all views (for analytics)
    // Users can only create their own view records
    // Document ID format: {userId}_{chapterKey}
    match /userViews/{viewId} {
      allow read: if true;
      allow create: if isAuthenticated() 
                    && viewId.matches(request.auth.uid + '_.*')
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // Bookmarks Collection
    // Users can only read and write their own bookmarks
    match /bookmarks/{bookmarkId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'seriesId', 'bookId', 'chapterId', 'timestamp']);
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update: if false;
    }
    
    // Highlights Collection
    // Users can only read and write their own highlights
    match /highlights/{highlightId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'seriesId', 'bookId', 'chapterId', 'text', 'timestamp'])
                    && request.resource.data.text.size() >= 3
                    && request.resource.data.text.size() <= 500;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update: if false;
    }
    
    // Chapter Reactions Collection (Emoji reactions)
    // Anyone can read reactions
    // Users can only create/delete their own reactions
    match /chapterReactions/{reactionId} {
      allow read: if true;
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'chapterKey', 'seriesId', 'bookId', 'chapterId', 'reaction', 'timestamp']);
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update: if false;
    }
    
    // User Profiles Collection (for future expansion)
    // Users can read any profile but only write their own
    match /userProfiles/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // Reading Analytics (for admin dashboard)
    // Anyone can read (for public stats)
    // Only authenticated users can write (when completing chapters, etc.)
    match /analytics/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}

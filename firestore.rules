rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Chapters - read by all, write by admins only
    match /chapters/{chapterId} {
      allow read: if true;
      allow write: if false; // Managed by backend
    }
    
    // Comments - read by all, write by authenticated users
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isSignedIn() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.text is string &&
                       request.resource.data.text.size() > 0 &&
                       request.resource.data.text.size() <= 1000;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Likes - read by all, write by owner
    match /likes/{likeId} {
      allow read: if true;
      allow create, update, delete: if isSignedIn() && 
                                        likeId.matches('^' + request.auth.uid + '_.*');
    }
    
    // Book likes
    match /bookLikes/{likeId} {
      allow read: if true;
      allow create, update, delete: if isSignedIn() && 
                                        likeId.matches('^' + request.auth.uid + '_.*');
    }
    
    // Bookmarks - read and write by owner only
    match /bookmarks/{bookmarkId} {
      allow read, write: if isSignedIn() && 
                            bookmarkId.matches('^' + request.auth.uid + '_.*');
    }
    
    // Highlights - read and write by owner only
    match /highlights/{highlightId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isSignedIn() && 
                       request.resource.data.userId == request.auth.uid;
    }
    
    // Progress tracking - read and write by owner only
    match /progress/{progressId} {
      allow read, write: if isSignedIn() && 
                            progressId.matches('^' + request.auth.uid + '_.*');
    }
    
    // Reading history - read and write by owner only
    match /readingHistory/{historyId} {
      allow read, write: if isSignedIn() && 
                            historyId.matches('^' + request.auth.uid + '_.*');
    }
    
    // Reading stats - read and write by owner only
    match /readingStats/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // User profiles - read by all, write by owner
    match /userProfiles/{userId} {
      allow read: if true;
      allow create, update: if isOwner(userId);
      allow delete: if false;
    }
    
    // Notifications - read and write by owner only
    match /notifications/{notificationId} {
      allow read, write: if isOwner(resource.data.userId);
      allow create: if isSignedIn() && 
                       request.resource.data.userId == request.auth.uid;
    }
    
    // Polls - read by all
    match /polls/{pollId} {
      allow read: if true;
      allow create: if false; // Created by system
      allow update: if isSignedIn(); // For voting
      allow delete: if false;
    }
  }
}
